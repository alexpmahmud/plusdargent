@using PlusArgent_v1._0.Utils
@model IEnumerable<PlusArgent_v1._0.Models.Category>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>@TextLayouts.vtCategoryList</h2>



            <div class="title_right">
                <div class=" pull-right top_search">
                    <div class="input-group">
                        <a href="~/Category/Create" class="btn btn-success btn-xs"><i class="fa fa-plus"></i> @TextLayouts.btnInsert</a>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>


        <div class="x_content">
            <div class="form-horizontal">


                <div class="table-responsive">
                    <table class="table table-striped jambo_table">
                        <thead>
                            <tr class="headings">

                                <th>
                                    @Html.DisplayNameFor(model => model.Description)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Type)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Description)
                                    </td>
                                    <td style="width: 20%">
                                        @Html.DisplayFor(modelItem => item.Type)
                                    </td>
                                    <td style="width: 20%">
                                        <a href="~/Category/Edit/@item.IdCategory" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> @TextLayouts.btnEdit</a>

                                        <button class="btn btn-danger btn-xs delete" data-id="@item.IdCategory"><i class="fa fa-trash-o"></i> @TextLayouts.btnDelete</button>


                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
</div>
<div class="modal" id="modal"></div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script>
        $(function () {
            $(".delete").click(function () {
                var id = $(this).attr("data-id");
                $("#modal").load('@Url.Action("Delete", "Category")/' + id, function () {
                    $("#modal").modal();
                })
            });
        })
</script>

