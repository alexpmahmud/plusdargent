@using PlusArgent_v1._0.Utils
@model PlusArgent_v1._0.Models.Account

@{
    ViewBag.Title = "Delete";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
            <h4 class="modal-title">@TextLayouts.vtAccountDelete</h4>
        </div>
        <div class="modal-body">

            <h3>@TextLayouts.txtDeleteConfirm</h3>
            <div>
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Description)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.Type)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Type)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.DateDue)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DateDue)
                    </dd>
                </dl>
            </div>
        </div>
        <div class="modal-footer">
            @using (Html.BeginForm())
                {

                 
                            @Html.AntiForgeryToken()

                            <button type="submit" class="btn btn-success">@TextLayouts.btnDelete</button>

                            @Html.ActionLink(@TextLayouts.btnCancel, "Index", "Account", null, new { @class = "btn btn-primary"})

          
                }
            
        </div>
    </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->